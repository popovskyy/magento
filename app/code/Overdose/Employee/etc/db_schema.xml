<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="overdose_employee" resource="default" engine="innodb">
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true"/>
        <column xsi:type="varchar" name="name" nullable="true" length="255"/>
        <column xsi:type="int" name="age" unsigned="true" nullable="false" identity="false"/>
        <column xsi:type="text" name="notes" nullable="false"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id" />
        </constraint>
    </table>
</schema>
